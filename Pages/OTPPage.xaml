<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Campuscloset.Pages.OTPPage"
             Title="OTPPage"
             Shell.NavBarIsVisible="False" BackgroundColor="Beige">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>
    
    <VerticalStackLayout>
        <Label Text="Enter the OTP Code" 
           FontSize="24" 
           HorizontalOptions="Center" 
           VerticalOptions="Center" />

        <!-- Large Text Box -->
        <Entry x:Name="txtOtpCode" 
           Placeholder="Enter OTP"
           FontSize="18" 
           Keyboard="Numeric"
           HorizontalTextAlignment="Center"
           WidthRequest="250"
           HeightRequest="50" />

        <!-- Verify Button -->
        <Button Text="Verify OTP" 
            FontSize="18" 
            Clicked="VerifyOtpButton" 
            BackgroundColor="#3D3D3D" 
            TextColor="#D3AC69" 
            HorizontalOptions="Center" />

        <!-- Error Message -->
        <Label x:Name="lblOtpError" 
           Text="Invalid OTP! Please try again."
           FontSize="14" 
           TextColor="Red" 
           IsVisible="False" 
           HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>