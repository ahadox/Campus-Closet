<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Campuscloset.Settings"
             BackgroundColor="#F7F5EF"
             Title="Settings">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header Section for Centered Title -->
            <Label Text="SETTINGS" 
                   FontSize="Large" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   TextColor="Black"/>

            <!-- Main Content Grid Layout -->
            <Grid RowDefinitions="Auto, *" ColumnDefinitions="Auto, *, *">

                <!-- Left Column - Change Photo Section -->
                <StackLayout Grid.Row="0" Grid.Column="0" HorizontalOptions="Center">
                    <Frame WidthRequest="300" HeightRequest="300" BackgroundColor="#EAE6DD" CornerRadius="10" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="CHANGE PHOTO" 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center" 
                               TextColor="Gray"
                               FontAttributes="Bold"/>
                    </Frame>
                </StackLayout>

                <!-- Right Column - Settings Form -->
                <StackLayout Grid.Row="0" Grid.Column="2" Spacing="20">

                    <!-- Name Section -->
                    <StackLayout>
                        <Label Text="NAME" 
                               FontAttributes="Bold" 
                               FontSize="Small" 
                               TextColor="Black"/>
                        <Entry Placeholder="Change Name" 
                               BackgroundColor="#F1F1E8" 
                               HeightRequest="40"/>
                    </StackLayout>

                    <!-- Email Section -->
                    <StackLayout>
                        <Label Text="EMAIL" 
                               FontAttributes="Bold" 
                               FontSize="Small" 
                               TextColor="Black"/>
                        <Entry Placeholder="Change Email" 
                               BackgroundColor="#F1F1E8" 
                               HeightRequest="40"/>
                    </StackLayout>

                    <!-- Theme Section -->
                    <StackLayout Orientation="Horizontal" Spacing="20">
                        <Label Text="THEME" 
                               FontAttributes="Bold" 
                               FontSize="Small" 
                               TextColor="Black"/>
                        <RadioButton Content="LIGHT" Value="Light" GroupName="Theme"/>
                        <RadioButton Content="DARK" Value="Dark" GroupName="Theme"/>
                    </StackLayout>

                    <!-- Notification Section -->
                    <StackLayout Orientation="Horizontal" Spacing="20">
                        <Label Text="NOTIFICATION" 
                               FontAttributes="Bold" 
                               FontSize="Small" 
                               TextColor="Black"/>
                        <RadioButton Content="ON" Value="On" GroupName="Notification"/>
                        <RadioButton Content="OFF" Value="Off" GroupName="Notification"/>
                    </StackLayout>

                    <!-- Save Button -->
                    <Button Text="SAVE &amp; CONTINUE" 
                            BackgroundColor="#BBA48A" 
                            TextColor="White" 
                            FontAttributes="Bold" 
                            CornerRadius="10" 
                            HeightRequest="50"
                            HorizontalOptions="Start"/>
                </StackLayout>

            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
