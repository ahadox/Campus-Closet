<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Campuscloset"
             x:Class="Campuscloset.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />

            </ResourceDictionary.MergedDictionaries>
            <!-- Dynamic Theme Resources -->
            <Color x:Key="DynamicBackgroundColor" x:Static="{x:StaticResource BackgroundColorLight}" />
            <Color x:Key="DynamicTextColor" x:Static="{x:StaticResource TextColorLight}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
